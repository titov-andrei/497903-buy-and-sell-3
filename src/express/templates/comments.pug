extends layout.pug

block content
  main.page-content
    section.comments
      .comments__wrapper
        h1.visually-hidden Страница комментариев
        each pugOffer in pugOffers
          .comments__block
            .comments__header
              a.announce-card(href="#")
                h2.announce-card__title #{pugOffer.title}
                span.announce-card__info
                  span.announce-card__price ₽ #{pugOffer.sum}
                  +ticketLabel(pugOffer.type)(class=`announce-card__type`)
            ul.comments-list
            each comment in pugOffer.comments
              li.js-card
                .comment-card
                  .comment-card__header
                    a.comment-card__avatar.avatar(href="#")
                      img(src="/img/avatar03.jpg" alt="Аватар пользователя" srcset="/img/avatar03@2x.jpg 2x")
                    p.comment-card__author Александр Бурый
                  .comment-card__content
                    p
                      | #{comment.text}
                  button.comment-card__delete.js-delete(type="button") Удалить
